<!DOCTYPE html>
<html>

<head>
    <title>Patient modify</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="./style.css" />
</head>

<body>
  <div class="c">
    <h1>Modify patient data</h1>

    <%if(details!=null) { %>
      <% details.forEach( (item)=>{ %>

      <form action="/api/modify" method="POST">
        <input type="text" value=<%= item.surname%> name="surname" required>
        <input type="text" value=<%= item.name%> name="name" required>
        <input type="date" value=<%= item.birthDate%> name="birthDate" onfocus="(this.type='date')" required>
        <input type="text" value=<%= item.case%> name="case" required>
        <input style="display: none;" type="text" name="id" value=<%= item.id%> required> </input>
        <select name="inHospital" required>
            <option value="" disabled selected hidden> <%= item.inHospital%> </option>
            <option value="true"> Yes </option>
            <option value="false"> No </option>
        </select>
        <button type="submit" class="btn btn-success">Submit changes</button>
      </form>
      
      <% }) %>
    <% } %>
  </div>
</body>

</html>